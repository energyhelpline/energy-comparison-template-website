@model BareboneUi.Pages.ContractExpiryDate.ContractExpiryDateViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h1>Contract Expiry Date</h1>

@using (Html.BeginForm("Index", "ContractExpiryDate", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ContractExpiryDateUri)

    <table>
        <tr>
            <td><label for="GasContractExpiryDate">Gas Contract Expiry Date</label></td>
            <td><input id="GasContractExpiryDate" name="gasContractExpiryDate" type="text" /></td>
        </tr>
        <tr>
            <td><label for="ElectricityContractExpiryDate">Electricity Contract Expiry Date</label></td>
            <td><input id="ElectricityContractExpiryDate" name="ElectricityContractExpiryDate" type="text" /></td>
        </tr>

        <tr>
            <td colspan="2" align="right"><button id="submitContractExpiryDate" type="submit">Submit</button></td>
        </tr>
    </table>
}
